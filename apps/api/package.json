        "@types/pdfkit": "^0.17.3",
        "@types/qrcode": "^1.5.6",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^11.0.0",
        "jest": "^29.7.0",
        "jest-mock-extended": "^3.0.5",
        "prisma": "^5.8.1",
