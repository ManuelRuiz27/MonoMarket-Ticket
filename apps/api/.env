# Environment
NODE_ENV=development

# Server
PORT=3000

# Database (local dev)
DATABASE_URL="postgresql://monomarket:__SET_POSTGRES_PASSWORD__@localhost:5432/monomarket_tickets?schema=public"

# JWT
JWT_SECRET=__SET_JWT_SECRET__
JWT_EXPIRES_IN=7d

# Redis (optional, keep default if not used)
REDIS_URL=redis://localhost:6379

# URLs
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:5174

# Mercado Pago
MERCADOPAGO_ACCESS_TOKEN=__SET_MP_ACCESS_TOKEN__
MERCADOPAGO_PUBLIC_KEY=__SET_MP_PUBLIC_KEY__
MERCADOPAGO_WEBHOOK_SECRET=__SET_MP_WEBHOOK_SECRET__

# OpenPay
OPENPAY_MERCHANT_ID=__SET_OPENPAY_MERCHANT_ID__
OPENPAY_PRIVATE_KEY=__SET_OPENPAY_PRIVATE_KEY__
OPENPAY_PUBLIC_KEY=__SET_OPENPAY_PUBLIC_KEY__
OPENPAY_PRODUCTION=false
OPENPAY_WEBHOOK_SECRET=__SET_OPENPAY_WEBHOOK_SECRET__

# Email (SMTP)
SMTP_HOST=__SET_SMTP_HOST__
SMTP_PORT=587
SMTP_USER=__SET_SMTP_USER__
SMTP_PASSWORD=__SET_SMTP_PASSWORD__
EMAIL_FROM=__SET_EMAIL_FROM__

# Logging
LOG_LEVEL=debug
